import Layout from "../layouts/Layout.astro";
import CartList from "../components/Cart/List.svelte";
---

<Layout title="Your Cart">
    <section id="products" class="mt-8 md:px-10">
        <h2
            class="font-extrabold text-4xl md:text-6xl ml-2 pl-1.5 text-center tracking-wide pb-2"
